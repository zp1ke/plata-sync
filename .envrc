#!/usr/bin/env bash

# Add .bin directory to PATH for easy access to dev script
PATH_add .bin

# Set project root
export PROJECT_ROOT="$(pwd)"

# Detect OS for informational message
if [ -f /etc/os-release ]; then
  . /etc/os-release
  OS_INFO="$NAME"
else
  OS_INFO="$(uname -s)"
fi

# Log when environment is loaded
echo "✓ plata-sync development environment loaded"
echo "  • .bin added to PATH (use 'dev' command directly)"
echo "  • Platform: $OS_INFO"
